extends layout

block content
  h1= title

  .jumbotron
    h2 Please enter the category details here.
    hr
    div.errors
      if errors
        each error, i in errors
          div.alert.alert-danger #{error.msg}
    form(method='post', action='/categories/add')
      .form-group
        label Category:
        input.form-control(name="category", type='text', placeholder='Add Category')

      .form-group
        label Author:
        input.form-control(name="author", type='text', placeholder='Add Author')

      input.btn.btn-primary(type="Submit", name='submit', value="Save")
