extends layout

block content
  if posts
    each post, i in posts
      .post
        h1
          a(href='/posts/show/#{post._id}')
            =post.title

        p.meta Posted in #{post.category} by #{post.author} on #{moment(post.date).format("dddd, MMMM Do YYYY, h:mm:ss a +0001")}
        =post.body
        a.more(href='/posts/show/#{post._id}') Read
